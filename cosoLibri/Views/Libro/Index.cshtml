@model IEnumerable<cosoLibri.Models.Libro>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Isbn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titolo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnnoPub)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lingua)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FkEditoreNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Isbn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titolo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnnoPub)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lingua)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FkEditoreNavigation.CodiceEditore)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Codice">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Codice">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Codice">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
